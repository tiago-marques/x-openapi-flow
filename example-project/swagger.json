{
  "openapi": "3.0.3",
  "info": {
    "title": "Kickstart Swagger API",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:3000"
    }
  ],
  "paths": {
    "/orders": {
      "post": {
        "operationId": "createOrder",
        "summary": "Create order",
        "parameters": [
          {
            "in": "header",
            "name": "Idempotency-Key",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": [
                  "customer_id",
                  "amount"
                ],
                "properties": {
                  "customer_id": {
                    "type": "string"
                  },
                  "amount": {
                    "type": "number"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Order created",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "required": [
                    "order_id",
                    "status"
                  ],
                  "properties": {
                    "order_id": {
                      "type": "string"
                    },
                    "status": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/orders/{id}/pay": {
      "post": {
        "operationId": "payOrder",
        "summary": "Pay order",
        "parameters": [
          {
            "in": "header",
            "name": "Idempotency-Key",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "in": "path",
            "name": "id",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Order paid",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "required": [
                    "order_id",
                    "payment_id",
                    "payment_status"
                  ],
                  "properties": {
                    "order_id": {
                      "type": "string"
                    },
                    "payment_id": {
                      "type": "string"
                    },
                    "payment_status": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/orders/{id}/fulfill": {
      "post": {
        "operationId": "fulfillOrder",
        "summary": "Fulfill order",
        "parameters": [
          {
            "in": "header",
            "name": "Idempotency-Key",
            "required": false,
            "schema": {
              "type": "string"
            }
          },
          {
            "in": "path",
            "name": "id",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Order fulfilled",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "required": [
                    "shipment_id",
                    "delivery_date"
                  ],
                  "properties": {
                    "shipment_id": {
                      "type": "string"
                    },
                    "delivery_date": {
                      "type": "string",
                      "format": "date"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
